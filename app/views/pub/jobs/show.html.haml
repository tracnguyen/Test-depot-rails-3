%h1= @job.title

%table.details
  %tr
    %td
    %td
  %tr
    %th Status
    %td= @job.status
  %tr
    %th Posted on
    %td= @job.creation_date.to_formatted_s(:long)
    %tr
      %th Closed on
      %td= @job.expiry_date.to_formatted_s(:long) if @job.expiry_date

!= @job.description

%br/

%p= link_to 'Apply for this position', new_pub_job_applicant_path(@job), :id => "Apply"

:javascript
  $(function() {
  	$("#Apply").button().css("margin-bottom", "30px")
  })

%p= link_to 'Back to Job Board', pub_jobs_path
