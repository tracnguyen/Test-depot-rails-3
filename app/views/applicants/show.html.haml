%p
  %b First name:
  = @applicant.first_name
%p
  %b Last name:
  = @applicant.last_name
%p
  %b Email:
  = @applicant.email
%p
  %b Phone:
  = @applicant.phone
%p
  %b Resume:
  - if @applicant.attachment?
    = link_to @applicant.attachment_file_name, @applicant.attachment.url
  - else
    No resume attached
%p
  = form_for(@applicant) do |f|
    = f.label :status
    = f.select :status, application_status_collection

%p
  = link_to 'Mark as unread', mark_applicant_as_unread_path(@applicant)

%p
  = link_to 'Back', applicants_path

:javascript
  $(function() {
  	$("select#applicant_status").change(function() {
  		$("form.edit_applicant").submit()
  	})
  })

