%h1 New account

= form_for @account do |f|
  -if @account.errors.any?
    #errorExplanation
      %h2= "#{pluralize(@account.errors.count, "error")} prohibited this account from being saved:"
      %ul
        - @account.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :subdomain
    = f.text_field :subdomain
  = fields_for :owner do |o|
    .field
      = o.label :email
      = o.text_field :email
    .field
      = o.label :password
      = o.password_field :password
    .field
      = o.label :password_confirmation
      = o.password_field :password_confirmation
  .actions
    = f.submit 'Save'

= link_to 'Back', accounts_path
