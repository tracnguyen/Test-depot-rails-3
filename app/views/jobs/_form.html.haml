- semantic_form_for @job do |f|
  -if @job.errors.any?
    #errorExplanation
      %h2= "#{pluralize(@job.errors.count, "error")} prohibited this job from being saved:"
      %ul
        - @job.errors.full_messages.each do |msg|
          %li= msg

  = f.input :title, :label => "Job Title"
  = f.input :description, :as => :text, :label => "Job Description"
  = f.input :status, :as => :select, :collection => ["Open", "Close"]        
  = f.commit_button 'Save'
