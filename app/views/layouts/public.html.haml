%html
  %head
    %title Hiring application
    %script{ :type => "text/javascript", :src => "http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js" }
    %script{ :type => "text/javascript", :src => "http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.1/jquery-ui.min.js" }
    = stylesheet_link_tag "style.css"
    = formtastic_stylesheet_link_tag
    = javascript_include_tag :all
    = csrf_meta_tag
  %body
    #header
      .links.clearfix
        .right
          = link_to "Admin Area", dashboard_path
      %h1#title= current_account.name
    #container.clearfix
      #content-full
        - if notice || alert
          #flashes
            %p#notice= notice
            %p#alert= alert
        = yield
    #footer
      Copyright 2010. Powered by <a href=http://www.techpropulsionlabs.com>HiringApp</a>.
